{
  "compilerOptions": {
    "target": "ES2021",      
    "module": "commonjs",   
    "outDir": "./dist",                        
    "strict": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,       
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  }
}
